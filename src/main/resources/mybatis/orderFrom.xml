<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="code.dao.orderFromDao">
    <insert id="addOrderFrom" parameterType="code.pojo.orderFrom">
        INSERT INTO `shopping`.`orderfrom` (`idOrderFrom`, `customerId`, `detail`, `shoppingAdd`, `delivery`, `waybillNumber`, `total`, `status`, `joinTime`, `reasons`) VALUES (REPLACE(UUID(),"-",""), #{customerId}, #{detail}, #{shoppingAdd}, #{delivery}, #{waybillNumber}, #{total}, #{status}, #{joinTime}, #{reasons});
    </insert>
    <select id="selectedAll" resultType="code.pojo.orderFrom">
        select *
        from shopping.orderfrom o
        where true
    </select>
    <select id="selectedByCustomerId" parameterType="String" resultType="code.pojo.orderFrom">
        select *
        from shopping.orderfrom o
        where o.customerId = #{customerId}
    </select>
    <select id="selectedByStatus" parameterType="String" resultType="code.pojo.orderFrom">
        select *
        from shopping.orderfrom o
        where o.status = #{status}
    </select>
    <select id="getOrderIdByTimeAndCId" parameterType="String" resultType="code.pojo.orderFrom">
        select *
        from shopping.orderfrom o
        where o.joinTime = #{param1}
        and o.customerId = #{param2}
    </select>

    <delete id="deleteOrderFrom" parameterType="String">
        DELETE FROM `shopping`.`orderfrom` WHERE (`idOrderFrom` = #{idOrderFrom});
    </delete>

    <update id="upDataOrderFrom" parameterType="code.pojo.orderFrom">
        UPDATE `shopping`.`orderfrom` SET `customerId` = #{customerId}, `detail` = #{detail}, `shoppingAdd` = #{shoppingAdd}, `delivery` = #{delivery}, `waybillNumber` = #{waybillNumber}, `total` = #{total}, `status` = #{status}, `joinTime` = #{joinTime}, `reasons` = #{reasons} WHERE (`idOrderFrom` = #{idOrderFrom});
    </update>
    <update id="playOk" parameterType="code.pojo.orderFrom">
        UPDATE `shopping`.`orderfrom` SET `status` = '待发货' WHERE (`idOrderFrom` = #{param1});
    </update>
    <update id="upDataOrderFromStatus" parameterType="code.pojo.orderFrom">
        UPDATE `shopping`.`orderfrom` SET `status` = #{param2} WHERE (`idOrderFrom` = #{param1});
    </update>
</mapper>

